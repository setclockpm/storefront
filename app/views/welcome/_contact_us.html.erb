<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Stay Informed</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_for Message.new, id: "contact-form", url: main_app.contact_path do |f| %>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: "Name", id: "name", class: "form-control", data: { required: true, 'validation-required-message': "Please enter your name." } %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :email, "Email Address" %>
              <%= f.email_field :email, placeholder: "Email Address", id: "name", class: "form-control", data: { required: true, 'validation-required-message': "Please enter your email address." } %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :phone, "Phone Number" %>
              <%= f.phone_field :phone, placeholder: "Phone Number", id: "phone", class: "form-control", data: { required: true, 'validation-required-message': "Please enter your phone number." } %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :content, "Message" %>
              <%= f.text_area :content, placeholder: "Message", id: "content", class: "form-control", rows: 5, data: { required: true, 'validation-required-message': "Please enter your phone number." } %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br/><div id="success"><%= render partial: "layouts/flash_messages" %></div>
          <div class="row">
            <div class="form-group col-xs-12"> <%= f.submit "Send", class: "btn btn-success btn-lg" %> </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>