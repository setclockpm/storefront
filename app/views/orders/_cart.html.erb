    <%#= form_tag empty_cart_path, method: :put do %>
      <p id="clear_cart_link" data-hook>
        <%#= link_to Spree.t(:continue_shopping).titleize, products_path, class: 'continue' %>
      </p>
    <%# end %>
  </div> -->
<% end %>