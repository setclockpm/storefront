<%= render partial: 'long_form_validation' %>

<div id="inquiries-card" class="card col-md-6">
  <div class="col-md-12">
    <h1>inquiries</h1>
    <br/>
    <%= render partial: "layouts/flash_messages" %>
  </div>
  
  <div class="col-md-12">
    <%= form_for @message, id: "contact-form", url: main_app.contact_path(@message) do |f| %>
    
      <div class="control-group select">
        <div class="form-group floating-label-form-group controls">
          <%= f.select :subject, ["Product Availability", "Product Inquiries: description, pricing, etc ...", "Wholesale Inquiries", "Other"], 
                      { prompt: "Regarding (Choose One)*", selected: @subject }, id: "subject", class: "form-control selectpicker", required: true %>
        </div>
      </div>
      <div class="control-group">
        <div class="form-group floating-label-form-group controls">
          <%= f.label :name, "Name", class: 'required' %>
          <%= f.text_field :name, placeholder: "Name*", id: "name", class: "form-control", data: { required: true } %>
        </div>
      </div>
      <div class="control-group">
        <div class="form-group floating-label-form-group controls">
          <%= f.label :email, "Email Address", class: 'required' %>
          <%= f.email_field :email, placeholder: "Email Address*", id: "email", class: "form-control", data: { required: true } %>
        </div>
      </div>
      <div class="control-group">
        <div class="form-group floating-label-form-group controls">
          <%= f.label :phone, "Phone Number" %>
          <%= f.phone_field :phone, placeholder: "Phone Number", id: "phone", class: "form-control" %>
        </div>
      </div>
      <div class="control-group">
        <div class="form-group floating-label-form-group controls">
          <%= f.label :content, "Message", class: 'required' %>
          <%= f.text_area :content, placeholder: "Message*", id: "content", class: "form-control", rows: 5, data: { required: true } %>
        </div>
      </div>
      <div><h6 class="required-legend"> Indicates required field</h6></div>
      <div class="row submit-group">
        <div class="form-group col-xs-12">
          <%= f.submit "send", class: "btn-send btn btn-outline btn-lg", disabled: true %>
        </div>
      </div>
    <% end %>
  </div>
</div>