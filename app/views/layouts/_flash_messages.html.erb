<% if notice.present? %>
  <aside class="alert alert-info"> <%= notice %> </aside>
<% end %>

<% if alert.present? %>
  <aside class="alert alert-danger"> <%= alert %> </aside>
<% end %>



<% content_for :javascript do %>
<script type="text/javascript">
  var eventName = typeof(Turbolinks) !== 'undefined' ? 'page:change' : 'DOMContentLoaded';

  document.addEventListener(eventName, function() {
    <% if flash[:notice] %>
      ShopifyApp.flashNotice("<%= j flash[:notice].html_safe %>");
    <% end %>

    <% if flash[:error] %>
      ShopifyApp.flashError("<%= j flash[:error].html_safe %>");
    <% end %>
  });
</script>
<% end %>
