<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="<%= I18n.locale %>"><!--<![endif]-->

  <head>
    <meta charset="utf-8">
    <title>
      Porthos Home: <%= yield(:title).blank? ? "Shop Boldly For Your Style" : yield(:title) %>
      <%# The normal <yield(:title) || "Custom Title"> syntax doesn't work here for some reason. %> 
    </title>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1" name="viewport">
    <%= csrf_meta_tags %>
    <%== meta_data_tags %>
    <%= canonical_tag(current_store.url) %>
    <%= favicon_link_tag 'favicon.ico' %>
    <!-- Theme CSS -->
    <%= stylesheet_link_tag 'application', media: 'screen' %>
    <%= stylesheet_link_tag 'spree/frontend/all', media: 'screen' %>
    <!-- Javascript Libraries -->
    <%= javascript_include_tag 'spree/frontend/all' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <!-- Contact Form JavaScript -->
    <%= javascript_include_tag 'jqBootstrapValidation' %>
    
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= body_class %>" id="<%= @body_id || 'page-top' %>" data-hook="body">
    <%= render partial: 'spree/shared/google_analytics.js' %>
    <!-- This should be desktop Navigation -->
    <%= render partial: "layouts/shared/main_header_nav" %>
    
    <div canvas="container">
      <!-- This should be mobile Navigation -->
      <div class="full-page-wrapper" id="fullpage">
        <div id="mobile-header" class="application-header">
          <%= render partial: "layouts/shared/mobile_header_nav" %>
        </div>
      
        <%= yield %>
        <%= render partial: "layouts/shared/footer_below" %>
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
        <div class="scroll-top hidden-sm hidden-xs hidden-lg hidden-md">
          <%= link_to fa_icon("chevron-up"), "#page-top", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    
    <%= render partial: "layouts/shared/slidebar_menu" %>
  </body>

</html>
