<!-- Navigation -->
<nav class="navbar navbar-default navbar-<%= current_page?(main_app.root_url) ? "fixed" : "static" %>-top" role="banner">
  <div class="container topnav">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <div class="col-xs-2 navbar-menu">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <a class="navbar-brand" href="#page-top">
        <figure id="logo" class="col-md-3 col-sm-3 col-xs-8" data-hook> <%= logo %> </figure>
      </a>
      <!-- Container for cart, stays outside of toggle -->
      <div id="xs-cart" class="col-xs-2 navbar-cart">
        <ul class="nav navbar-nav navbar-right" data-hook="impostor-ul">
          <li id="xs-link-to-cart" class="xs" data-hook><%= link_to_cart %></li>
        </ul>
      </div>
      <!-- /.navbar-cart -->
    </div>
    <!-- /.navbar-header -->
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
      <ul id="taxonomies" class="nav navbar-nav navbar-right">
        <li class="hidden"><%= link_to '#page-top' %></li>
        <%= relevant_navigation_options %>
        <% @taxonomies.each do |taxonomy| %>
          <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
            <li class="taxonomy-root"><%= link_to Spree.t(:shop_by_taxonomy, taxonomy: taxonomy.name), anchor: taxonomy.name %></li>
            <%#= taxons_tree(taxonomy.root, @taxon, max_level) %>
          <% end %>
        <% end %>
        <li id="link-to-cart" class="page-scroll" data-hook><%= link_to_cart %></li>
      </ul>
      
      

        
      
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>