<!-- Navigation -->
<nav class="navbar navbar-default navbar-<%= current_page?(main_app.root_url) ? "fixed" : "static" %>-top" role="banner">
  <div class="container topnav">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <div class="col-xs-3 navbar-menu">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="text-center col-md-3 col-sm-3 col-xs-6">
        <figure id="logo" class="logo"> <%= logo %> </figure>
      </div>
        <!-- Container for cart, stays outside of toggle -->
      <div id="xs-cart" class="col-xs-3 navbar-cart">
        <ul class="nav navbar-nav navbar-right" data-hook="impostor-ul">
          <li id="xs-link-to-cart" class="xs" data-hook><%= link_to_cart %></li>
        </ul>
      </div>
      <!-- /.navbar-cart -->
    </div>
    <!-- /.navbar-header -->
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
      <ul id="taxonomies" class="nav navbar-nav navbar-right menu side-nav vertical" role="tablist" aria-multiselectable="true">
        <li class="hidden"><%= link_to '#page-top' %></li>
        <%= relevant_navigation_options %>
        <% @taxonomies.each_with_index do |taxonomy, tab_index| %>
          <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
            <li class="taxonomy-root side-nav-item submenu-parent" role="tab" aria-label="<%= taxonomy.name %>">
              <%= link_to Spree.t(:shop_by_taxonomy, taxonomy: taxonomy.name), anchor: taxonomy.name, tab_index: tab_index %>
            </li>
            <%#= taxons_tree(taxonomy.root, @taxon, max_level) %>
          <% end %>
        <% end %>
        <li class="spacer" role="menuitem"></li>
        <li class="item padded taxonomy-root side-nav-item" role="menuitem"> Location </li>
        <li class="spacer" role="menuitem"></li>
        <li class="item secondary" role="menuitem">
          <a href="/account/login" id="customer_login_link">Log In</a>
        </li>
        <li class="item secondary" role="menuitem">
          <a href="/account/register" id="customer_register_link">Create Account</a>
        </li>
        <li id="link-to-cart" class="page-scroll" data-hook><%= link_to_cart %></li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>