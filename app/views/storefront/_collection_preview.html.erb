<div class="container">
  <div class="heading-row row">
    <div class="title col-sm-6 col-xs-12">
      <h1 id="collection-preview">COLLECTION</h1>
    </div>
    <div class="col-sm-6 col-xs-12 see-more text-right">
      <%= link_to "see more".upcase, main_app.collection_path, class: "btn btn-lg btn-outline" %>
    </div>
  </div>
  <div class="main-row">
    <div class="gallery gallery-popup grid-uniform grid-home row">
      <% collection_preview_items.each do |image| %>
        <%= render partial: "collection_preview_item", locals: { image: image } %>
      <% end %>
    </div>
  </div>
</div>

  