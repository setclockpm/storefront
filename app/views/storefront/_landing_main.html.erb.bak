<%= render partial: 'spree/shared/google_analytics.js' %>
<%= render partial: 'spree/shared/header' %>


<!-- Header (Front Page) -->
<header id="intro-splash">
  <div class="container">
    <div class="row" data-hook>
      <%= breadcrumbs(@taxon) %>
      
        <div class="col-lg-12" data-hook>
          <div class="intro-text">
            <span class="name">Coming Soon</span>
            <hr class="star-light">
            <span class="skills">Shop Boldly For Your Style</span>
          </div>
        </div>
    </div>
  </div>
</header>

<%= render partial: 'storefront/about' %>
<!-- Callout -->
<aside class="callout">
  <div class="text-vertical-center"> </div>
</aside>

<%= render partial: 'storefront/spotlight' %>
<%= render partial: 'storefront/contact_us' %>


<!-- Footer -->
<footer class="text-center">
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="address footer-col col-md-4">
          <h3>Location</h3>
          <p>47650 Kato Rd.<br>Fremont, CA 95483</p>
        </div>
        <div class="footer-col col-md-4">
          <h3>Follow Porthos</h3>
          <ul class="list-inline">
            <% social_media_icons.each do |icon| %>
              <li><%= link_to fa_icon("#{icon} fw"), "#", class: "btn-social btn-outline" %></li>
            <% end %>
          </ul>
        </div>
        <div class="footer-col col-md-4">
          <h3>Partners</h3>
          <p><%= link_to 'Wholesale', '#' %></p>
          <p><%= link_to 'Business & Office Solutions', '#' %></p>
          <p><%= link_to 'Press Resource / Download Area', '#' %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 copyright">Copyright &copy; Porthos Home <%= Time.now.year %></div>
      </div>
    </div>
  </div>
</footer>

<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
<div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
  <%= link_to fa_icon("chevron-up"), "#page-top", class: "btn btn-primary" %>
</div>