<!-- Header (Front Page) -->
<header id="intro-splash">
  <div class="container">
    <div class="row" data-hook>
      <%= breadcrumbs(@taxon) %>
      
      <div class="col-lg-12" data-hook>
        <div class="intro-text">
          <span class="name">Coming Soon</span>
          <hr class="star-light">
          <span class="skills">Shop Boldly For Your Style</span>
        </div>
      </div>
      
    </div>
  </div>
</header>


<!-- About Us Section -->
<section id="about-us">  
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>About Us</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-lg-offset-2">
        <p>Envision products curated and culled regularly, demanding nothing but the sharpest designs, at the market's sharpest pricing.</p>
      </div>
      <div class="col-lg-4">
        <p>With an eye for modern styles, combined with an appreciation for intricacy and workmanship. Envision, Porthos Home.</p>
      </div>
      <div class="col-lg-8 col-lg-offset-2 text-center"> <%= link_to_catalog %> </div>
    </div>
  </div>
</section>


<!-- Callout -->
<aside class="callout">
  <div class="text-vertical-center"> </div>
</aside>


<section class="spotlight">
  <div class="spotlight-v1">
    <div class="tile full">
      <%= image_tag("spotlight.png", class: "img-responsive large-tile", alt: 'Think Outside The box') %>
    </div>
  </div>
</section>

<%= render partial: 'storefront/contact_us' %>