<% content_for :page_title do %>
  Data Import
<% end %>



<%= form_for @spreadsheet, url: spree.admin_import_inventory_path(@spreadsheet), method: :post, html: { class: "navbar-form" } do |f| %>

  <fieldset data-hook="new_inventory_import">
    <div data-hook="admin_inventory_import_form_fields" class="row">
      <div class="col-md-6">
        <div data-hook="file" class="form-group">
          <%= f.label :data, Spree.t(:excel_file) %>
          <%= f.file_field :data %>
        </div>
      </div>
    </div>

    <div class="form-actions" data-hook="buttons">
      <%= f.submit Spree.t(:import), name: nil, class: "btn btn-success" %>
      
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_products_url, icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>