<% content_for :page_actions do %>
  <%= link_to_new_showcase_item %>
<% end %>


<%# unless @showcase_items.any? %>
  <div class="alert alert-warning">
    <%#= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::ShowcaseItem)) %>.
  </div>
<%# else %>
  <table class="table sortable" data-hook="images_table" data-sortable-link="<%#= update_positions_admin_prcoduct_images_url(@product) %>">
    <thead>
      <tr data-hook="images_header">
        <th colspan="2">
          <%#= Spree.t(:thumbnail) %>
        </th>
        <%# if has_variants %>
          <th>
            <%#= Spree::Variant.model_name.human %>
          </th>
        <%# end %>
        <th>
          <%#= Spree.t(:alt_text) %>
        </th>
        <th class="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @showcase_items.each do |image| %>
        <tr id="<%= spree_dom_id image %>" data-hook="images_row">
          <td class="move-handle text-center">
            <%# if can? :edit, image %>
              <span class="icon icon-move handle"></span>
            <%# end %>
          </td>
          <td class="image">
            <%#= link_to image_tag(image.attachment.url(:mini)), image.attachment.url(:product) %>
          </td>
          <%# if has_variants %>
            <td><%#= options_text_for(image) %></td>
          <%# end %>
          <td><%#= image.alt %></td>
          <td class="actions actions-2 text-right">
            <%#= link_to_with_icon('edit', Spree.t(:edit), spree.edit_admin_product_image_url(@product, image), class: 'btn btn-primary btn-sm', no_text: true, data: { action: 'edit' }) if can? :edit, image %>
            <%#= link_to_delete(image, { url: spree.admin_product_image_url(@product, image), no_text: true }) if can? :destroy, image %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%# end %>
