<div class="pagination-container" data-hook="impostor" data-override-template-used="kaminari">
  <ul class="<%= pagination_class %>">
    <%= first_page_tag unless current_page.first? %>
    <%= prev_page_tag %>
    <% each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <%= page_tag page %>
      <% elsif !page.was_truncated? %>
        <%= gap_tag %>
      <% end %>
    <% end %>
    <span class="gap"><%= raw(t 'views.pagination.truncate') %></span>
    <%= next_page_tag %>
    <%= last_page_tag unless current_page.last? %>
  </ul>
</div>


