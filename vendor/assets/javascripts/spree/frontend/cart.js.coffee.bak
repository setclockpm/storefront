Spree.ready ($) ->
  if ($ 'form#update-cart').is('*')
    ($ 'form#update-cart a.delete').show().one 'click', ->
      # ($ this).parents('.line-item').first().find('select.line_item_quantity').val(0).change()
      ($ this).parents('.line-item').first().find('select.line_item_quantity').removeAttr('selected').filter('[value=0]').prop('selected', true)
      ($ this).parents('form').first().submit()
      false

  ($ 'form#update-cart').submit ->
    ($ 'form#update-cart #update-button').attr('disabled', true)

Spree.fetch_cart = ->
  $.ajax
    url: Spree.pathFor("cart_link"),
    success: (data) ->
      $('#link-to-cart').html data